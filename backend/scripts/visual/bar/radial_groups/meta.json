{
  "name": "分组径向柱状图",
  "description": "简单绘制一个分组径向柱状图",
  "ggplot2": {
    "mapping": {
      "x": "gene",
      "y": "count",
      "order_by": "gene",
      "fill": "group"
    },
    "layers": [
      {
        "type": "geom_round_col",
        "arguments": {
          "position": {
            "type": "position_dodge2"
          },
          "radius": 2,
          "show.legend": false
        }
      },
      {
        "type": "geom_text",
        "mapping": {
          "y": "count + 18",
          "label": "gene"
        },
        "arguments": {
          "size": [
            4
          ],
          "alpha": 0.6,
          "hjust": [
            0.3
          ]
        }
      },
      {
        "type": "geom_segment",
        "mapping": {
          "x": "start",
          "xend": "end",
          "y": -5,
          "yend": -5
        },
        "arguments": {
          "color": "grey40",
          "inherit.aes": false
        }
      },
      {
        "type": "geom_textpath",
        "mapping": {
          "x": "mid",
          "y": -18,
          "label": "group"
        },
        "arguments": {
          "color": "grey40",
          "inherit.aes": false,
          "size": 6
        }
      }
    ],
    "scales": [
      {
        "type": "scale_fill_manual",
        "arguments": {
          "values": [
            "#009392",
            "#39b185",
            "#9ccb86",
            "#e9e29c",
            "#eeb479",
            "#e88471",
            "#cf597e"
          ]
        }
      },
      {
        "type": "scale_y_continuous",
        "arguments": {
          "limits": [
            -100,
            120
          ]
        }
      }
    ],
    "coordinates": {
      "type": "coord_polar"
    },
    "labs": {
      "type": "labs",
      "arguments": {
        "title": "",
        "x": "",
        "y": ""
      }
    },
    "themes": [
      {
        "type": "theme_minimal"
      },
      {
        "type": "theme",
        "arguments": {
          "axis.text": {
            "type": "element_blank"
          },
          "axis.ticks": {
            "type": "element_blank"
          },
          "axis.title": {
            "type": "element_blank"
          },
          "axis.line": {
            "type": "element_blank"
          },
          "panel.grid": {
            "type": "element_blank"
          },
          "plot.background": {
            "type": "element_blank"
          }
        }
      }
    ],
    "width": 1000,
    "height": 900
  },
  "has_js": true
}