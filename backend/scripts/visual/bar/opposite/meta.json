{
  "name": "双组反向条形图",
  "description": "双组反向条形图用于展示两组富集分析结果",
  "ggplot2": {
    "mapping": {
      "x": "-log10(p.adjust)",
      "y": "Description",
      "fill": "Change"
    },
    "layers": [
      {
        "type": "geom_round_col",
        "arguments": {
          "alpha": 0.7
        }
      },
      {
        "type": "geom_text",
        "mapping": {
          "x": "margin",
          "label": "Description",
          "hjust": "hjust"
        },
        "arguments": {
          "colour": "black",
          "show.legend": false
        }
      }
    ],
    "scales": [
      {
        "type": "scale_fill_manual",
        "arguments": {
          "name": "Correlation",
          "values": [
            "#acd372",
            "#ed6ca4"
          ]
        }
      },
      {
        "type": "scale_x_continuous",
        "arguments": {
          "limits": [
            -19,
            25
          ],
          "breaks": [
            -20,
            -10,
            0,
            10,
            20
          ],
          "labels": [
            20,
            10,
            0,
            10,
            20
          ]
        }
      }
    ],
    "labs": {
      "type": "labs",
      "arguments": {
        "title": "",
        "x": "-log10(p.adjust)",
        "y": ""
      }
    },
    "themes": [
      {
        "type": "theme_prism"
      },
      {
        "type": "theme",
        "arguments": {
          "axis.text.y": {
            "type": "element_blank"
          },
          "axis.ticks.y": {
            "type": "element_blank"
          },
          "axis.line.y": {
            "type": "element_blank"
          },
          "legend.position": "top",
          "plot.background": {
            "type": "element_blank"
          }
        }
      }
    ],
    "width": 800,
    "height": 700
  },
  "has_js": false
}