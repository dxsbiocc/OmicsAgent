{
    "name": "火山图",
    "description": "火山图用于展示差异基因的显著性与倍数变化",
    "ggplot2": {
        "mapping": {
            "x": "log2FC",
            "y": "-log10(qvalue)",
            "colour": "group",
            "label": "symbol"
        },
        "layers": [
            {
                "type": "annotation_raster",
                "arguments": {
                    "raster": [
                        "#DFE1B8",
                        "#FFFFFF",
                        "#F3D7CE"
                    ],
                    "resolution": 1000,
                    "direction": "horizontal",
                    "interpolate": false
                }
            },
            {
                "type": "geom_point",
                "mapping": {
                    "size": "abs(log2FC)"
                },
                "arguments": {
                    "alpha": 0.8,
                    "stroke": 0
                }
            },
            {
                "type": "geom_text_repel",
                "arguments": {
                    "top": "log2FC",
                    "top.k": 10,
                    "show.legend": false,
                    "colour": "#000000"
                }
            },
            {
                "type": "geom_vline",
                "arguments": {
                    "xintercept": [
                        0
                    ],
                    "linewidth": 1
                }
            },
            {
                "type": "annotate",
                "arguments": {
                    "geom": "segment",
                    "x": [
                        -0.2
                    ],
                    "y": [
                        10,
                        20,
                        30
                    ],
                    "xend": [
                        0
                    ],
                    "yend": [
                        10,
                        20,
                        30
                    ],
                    "linewidth": [
                        1
                    ]
                }
            },
            {
                "type": "annotate",
                "arguments": {
                    "geom": "text",
                    "x": [
                        -0.3
                    ],
                    "y": [
                        10,
                        20,
                        30
                    ],
                    "label": [
                        10,
                        20,
                        30
                    ],
                    "hjust": [
                        1
                    ],
                    "colour": [
                        "black"
                    ]
                }
            }
        ],
        "scales": [
            {
                "type": "scale_colour_manual",
                "arguments": {
                    "values": [
                        "#a3ad62",
                        "grey70",
                        "#df91a3"
                    ]
                }
            },
            {
                "type": "scale_size_continuous",
                "arguments": {
                    "range": [
                        1,
                        8
                    ]
                }
            },
            {
                "type": "scale_x_continuous",
                "arguments": {
                    "limits": [
                        -12,
                        12
                    ]
                }
            },
            {
                "type": "scale_y_continuous",
                "arguments": {
                    "expand": {
                        "type": "expansion",
                        "arguments": {
                            "mult": [
                                0.05,
                                0.05
                            ]
                        }
                    }
                }
            }
        ],
        "guides": {
            "size": {
                "type": "guide_none"
            },
            "colour": {
                "type": "guide_legend",
                "arguments": {
                    "override.aes": {
                        "type": "list",
                        "arguments": {
                            "size": 6
                        }
                    }
                }
            }
        },
        "labs": {
            "type": "labs",
            "arguments": {
                "title": "Yap1-KO",
                "x": "log2FC",
                "y": "-log10(p.adjust)"
            }
        },
        "themes": [
            {
                "type": "theme_prism"
            },
            {
                "type": "theme",
                "arguments": {
                    "axis.line.y": {
                        "type": "element_blank"
                    },
                    "axis.ticks.y": {
                        "type": "element_blank"
                    },
                    "axis.text.y": {
                        "type": "element_blank"
                    },
                    "plot.background": {
                        "type": "element_blank"
                    }
                }
            }
        ],
        "width": 800,
        "height": 600
    },
    "has_js": false
}