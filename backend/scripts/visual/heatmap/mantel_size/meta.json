{
  "name": "ggcor 版双组连接热图",
  "description": "ggcor 版双组连接热图用于展示变量在不同分组中的分布情况",
  "ggplot2": {
    "mapping": {},
    "layers": [
      {
        "type": "geom_square"
      },
      {
        "type": "add_link",
        "mapping": {
          "colour": "p.value",
          "size": "size"
        }
      }
    ],
    "scales": [
      {
        "type": "scale_fill_gradientn",
        "arguments": {
          "name": "Correlation",
          "colours": [
            "#87c55f",
            "white",
            "#fe88b1"
          ]
        }
      },
      {
        "type": "scale_size_manual",
        "arguments": {
          "values": [
            0.2,
            0.4,
            0.7,
            1.1
          ]
        }
      },
      {
        "type": "scale_colour_manual",
        "arguments": {
          "values": [
            "#1aafd0",
            "#3be8b0",
            "#6a67ce",
            "#caccd1"
          ]
        }
      },
      {
        "type": "scale_x_discrete",
        "arguments": {
          "expand": {
            "type": "expansion",
            "arguments": {
              "mult": [
                0.1,
                0
              ]
            }
          }
        }
      }
    ],
    "labs": {
      "type": "labs",
      "arguments": {
        "title": "",
        "x": "",
        "y": ""
      }
    },
    "themes": [
      {
        "type": "theme",
        "arguments": {
          "plot.background": {
            "type": "element_blank"
          },
          "axis.text": {
            "type": "element_text",
            "arguments": {
              "face": "bold",
              "size": 8
            }
          },
          "axis.title": {
            "type": "element_blank"
          },
          "legend.position": "right",
          "panel.background": {
            "type": "element_blank",
            "arguments": {}
          },
          "legend.background": {
            "type": "element_blank",
            "arguments": {}
          }
        }
      }
    ],
    "correlate": {
      "x": [
        "YAP1",
        "WWTR1"
      ],
      "method": "pearson",
      "engine": "default",
      "cor.test": true,
      "breaks": [
        0.5,
        0.6,
        0.7
      ]
    },
    "qcorrplot": {
      "arguments": {
        "type": "upper"
      }
    },
    "width": 600,
    "height": 500
  },
  "has_js": false,
  "has_r": true
}